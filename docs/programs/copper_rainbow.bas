10 REM COPPER RAINBOW - PRE-BUILT LISTS
20 REM All 32 frames built at init, then
30 REM main loop just swaps with COPPER USE
40 MODE 1 : GCLS : COLOR 1,0
50 CLS : LOCATE 28,0 : PRINT "COPPER RAINBOW DEMO"
60 LOCATE 20,12 : PRINT "BUILDING 32 ANIMATION FRAMES..."
70 DIM C(15)
80 FOR I=0 TO 15 : READ C(I) : NEXT I
90 REM BUILD ALL 32 FRAMES AS COPPER LISTS
100 FOR S=0 TO 31
110   COPPER LIST S
120   COPPER CLEAR
130   FOR Y=0 TO 199 STEP 2
140     T=Y+S : I=INT((T-INT(T/32)*32)/2)
150     IF I>15 THEN I=31-I
160     COPPER ADD 0, Y, BGCOL, C(I)
170   NEXT Y
180 NEXT S
190 COPPER LIST END
200 CLS : LOCATE 28,0 : PRINT "COPPER RAINBOW DEMO"
210 LOCATE 22,24 : PRINT "PRESS ANY KEY TO STOP"
220 REM --- MAIN LOOP (BLAZING FAST) ---
230 S=0 : COPPER ON
240 VSYNC
250 COPPER USE S
260 S=S+1 : IF S>31 THEN S=0
270 GET K : IF K=0 THEN 240
280 COPPER OFF
290 FOR I=0 TO 31 : COPPER LIST I : COPPER CLEAR : NEXT I
300 COLOR 1,0 : MODE 0 : CLS
310 PRINT "DONE!"
320 END
900 REM COLOR TABLE (SYMMETRIC RAINBOW)
910 DATA 0,6,4,14,5,13,3,15
920 DATA 15,3,13,5,14,4,6,0
